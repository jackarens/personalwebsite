---
import SocialList from "@/components/SocialList.astro";
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "Hi, I'm Jack Arens. I'm currently the Lead Software Architect at Layer.",
	title: "About",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-12">About</h1>
	<div class="prose prose-sm prose-cactus max-w-none">
		<p>
			Hi, I'm Jack Arens. I'm currently the Lead Software Architect at <a
				href="https://layer.team"
				target="_blank"
				rel="noopener noreferrer">Layer</a
			>, where I help build and maintain a platform for Architects, Engineers, Construction
			Professionals.
		</p>
		<p>
			I am a graduate of the Raikes School of Computer Science and Management at the University of
			Nebraska-Lincoln, where I studied Compuer Engineering and Business Administration.
		</p>
		<p>
			In my free time, I enjoy hiking and camping, gardening, spending time with my wife, raising
			our kids, and working on DIY projects around my house.
		</p>
		<SocialList />
	</div>
</PageLayout>
