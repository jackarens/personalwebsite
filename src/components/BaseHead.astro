---
import { WEBMENTION_PINGBACK, WEBMENTION_URL } from "astro:env/client";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";
import "@/styles/global.css";

type Props = SiteMeta;

const { articleDate, description, ogImage, title } = Astro.props;

const titleSeparator = "â€¢";
const siteTitle = `${title} ${titleSeparator} ${siteConfig.title}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(ogImage ? ogImage : "/social-card.png", Astro.url).href;
---

<meta charset="utf-8" />
<meta content="width=device-width, initial-scale=1.0" name="viewport" />
<title>{siteTitle}</title>

{/* Icons */}
<link href="/icon.svg" rel="icon" type="image/svg+xml" />
{
	import.meta.env.PROD && (
		<>
			{/* Favicon & Apple Icon */}
			<link rel="icon" href="/favicon-32x32.png" type="image/png" />
			<link href="/icons/apple-touch-icon.png" rel="apple-touch-icon" />
			{/* Manifest */}
			<link href="/manifest.webmanifest" rel="manifest" />
		</>
	)
}

{/* Canonical URL */}
<link href={canonicalURL} rel="canonical" />

{/* Primary Meta Tags */}
<meta content={siteTitle} name="title" />
<meta content={description} name="description" />
<meta content={siteConfig.author} name="author" />

{/* Open Graph / Facebook */}
<meta content={articleDate ? "article" : "website"} property="og:type" />
<meta content={title} property="og:title" />
<meta content={description} property="og:description" />
<meta content={canonicalURL} property="og:url" />
<meta content={siteConfig.title} property="og:site_name" />
<meta content={siteConfig.ogLocale} property="og:locale" />
<meta content={socialImageURL} property="og:image" />
<meta content="1200" property="og:image:width" />
<meta content="630" property="og:image:height" />
{
	articleDate && (
		<>
			<meta content={siteConfig.author} property="article:author" />
			<meta content={articleDate} property="article:published_time" />
		</>
	)
}

{/* Twitter */}
<meta content="summary_large_image" property="twitter:card" />
<meta content={canonicalURL} property="twitter:url" />
<meta content={title} property="twitter:title" />
<meta content={description} property="twitter:description" />
<meta content={socialImageURL} property="twitter:image" />

{/* Sitemap */}
<link href="/sitemap-index.xml" rel="sitemap" />

{/* RSS auto-discovery */}
<link href="/rss.xml" title="Blog" rel="alternate" type="application/rss+xml" />

{/* Webmentions */}

{import.meta.env.PROD && (
	<>
		{/* Google tag (gtag.js) */}
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-8Z6GJL61CV"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-8Z6GJL61CV', { send_page_view: false });
		</script>
		<script is:inline>
			function trackPageview() {
				if (typeof gtag !== "function") return;
				gtag("event", "page_view", {
					page_location: window.location.href,
					page_path: window.location.pathname + window.location.search + window.location.hash,
					page_title: document.title,
				});
			}

			window.addEventListener("load", trackPageview, { once: true });
			document.addEventListener("astro:page-load", trackPageview);
			document.addEventListener("astro:after-swap", trackPageview);

			document.addEventListener("theme-change", (event) => {
				if (typeof gtag !== "function") return;
				const theme = event?.detail?.theme || "unknown";
				gtag("event", "theme_change", { theme });
			});

			document.addEventListener("analytics:search-open", () => {
				if (typeof gtag !== "function") return;
				gtag("event", "search_open");
			});

			document.addEventListener("analytics:search-close", () => {
				if (typeof gtag !== "function") return;
				gtag("event", "search_close");
			});

			document.addEventListener("analytics:back-to-top", () => {
				if (typeof gtag !== "function") return;
				gtag("event", "back_to_top");
			});

			document.addEventListener("analytics:image-zoom", (event) => {
				if (typeof gtag !== "function") return;
				const detail = event?.detail || {};
				gtag("event", "image_zoom", {
					src: detail.src,
					alt: detail.alt,
				});
			});

			document.addEventListener("click", (event) => {
				const target = event.target instanceof Element ? event.target : null;
				const link = target?.closest("a[href]");
				if (!link) return;

				if (link.getAttribute("data-analytics") === "view-slides") {
					if (typeof gtag === "function") {
						gtag("event", "view_slides", {
							link_url: link.href,
						});
					}
				}

				const href = link.getAttribute("href");
				if (!href || href.startsWith("#")) return;

				let url;
				try {
					url = new URL(href, window.location.href);
				} catch {
					return;
				}

				if (url.origin === window.location.origin) return;
				if (typeof gtag !== "function") return;
				gtag("event", "outbound_click", {
					link_url: url.href,
					link_text: (link.textContent || "").trim(),
				});
			});
		</script>
	</>
)}
{
	WEBMENTION_URL && (
		<>
			<link href={WEBMENTION_URL} rel="webmention" />
			{WEBMENTION_PINGBACK && <link href={WEBMENTION_PINGBACK} rel="pingback" />}
		</>
	)
}

<meta content={Astro.generator} name="generator" />
