---
import BaseHead from "@/components/BaseHead.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";
import "@/styles/slides.css";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html class="scroll-smooth" lang={siteConfig.lang}>
	<head>
		<BaseHead description={description} ogImage={ogImage} title={title} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reveal.js@5.1.0/dist/reveal.css" />
	</head>
	<body>
		<ThemeProvider />
		<div class="reveal">
			<div class="slides">
				<slot />
			</div>
		</div>

		<script>
			import Reveal from "reveal.js";

			document.addEventListener("DOMContentLoaded", () => {
				const deck = new Reveal({
					hash: true,
					slideNumber: true,
					progress: true,
					center: false,
					transition: "slide",
					backgroundTransition: "fade",
					width: "100%",
					height: "100%",
					margin: 0,
				});
				deck.initialize();

				/**
				 * Overview Mode Visibility Fix
				 *
				 * Reveal.js hides non-active slides using the `hidden` attribute and
				 * inline `display: none` styles. This is normally fine, but in overview
				 * mode (triggered by pressing Esc) all slides should be visible as thumbnails.
				 *
				 * The issue: Reveal.js re-applies `hidden` attributes when navigating
				 * with arrow keys in overview mode, causing slides to disappear.
				 *
				 * The solution: Use a MutationObserver to detect and remove `hidden`
				 * attributes in real-time while overview mode is active. The observer
				 * is disconnected when exiting overview to restore normal behavior.
				 */
				let overviewObserver: MutationObserver | null = null;

				/** Remove hidden attributes and inline display styles from all slides */
				const showAllSlides = () => {
					document.querySelectorAll(".slides section[hidden]").forEach((section) => {
						section.removeAttribute("hidden");
						(section as HTMLElement).style.display = "";
					});
				};

				// When entering overview mode (Esc key)
				deck.on("overviewshown", () => {
					// Immediately show all slides
					showAllSlides();

					// Start observing for Reveal.js re-hiding slides during keyboard navigation
					overviewObserver = new MutationObserver(showAllSlides);
					overviewObserver.observe(document.querySelector(".slides")!, {
						attributes: true,
						attributeFilter: ["hidden", "style"],
						subtree: true,
					});
				});

				// When exiting overview mode (Esc key or clicking a slide)
				deck.on("overviewhidden", () => {
					// Stop observing to restore normal slide visibility behavior
					if (overviewObserver) {
						overviewObserver.disconnect();
						overviewObserver = null;
					}
				});
			});
		</script>
	</body>
</html>
